<h1><%= @subject.name %></h1>
<h3>Details:</h3>
<ul>
  <li>Position: <%= @subject.position %></li>
  <li>Pages: <%=@subject.pages.count %></li>
  <li>Visible: <%=@subject.visible ? 'Yes' : 'No' %></li>
  <li>Created: <%= @subject.created_at %></li>
  <li>Updated: <%= @subject.updated_at %></li>
</ul>

<h4>Child Pages</h4>
<ul>
  <% @subject.pages.each do |page| %>
    <li><%= link_to(page.name, page_path(page)) %></li>
  <% end %>
</ul>

<%= link_to('Edit Subject', edit_subject_path(@subject)) %>
<br>
<%= link_to('Delete Subject', delete_subject_path(@subject)) %>
<br>
<%= link_to('All Subjects', subjects_path) %>
