<h1>Subjects#index</h1>
<p>Find me in app/views/subjects/index.html.erb</p>

<table class="listing" summary="Subject list">
  <tr class="header">
    <th>#</th>
    <th>Subject</th>
    <th>Visible</th>
    <th>Pages</th>
    <th>Actions</th>
  </tr>
  <% @subjects.each do |subject| %>
    <tr>
      <th><%= subject.position %></th>
      <th><%= subject.name %></th>
      <th><%= subject.visible ? 'Yes' : 'No' %></th>
      <th><%= subject.pages.size %></th>
      <td class="actions">
        <%= link_to("Show", subject_path(subject), :class => 'action show') %>
        <%= link_to("Edit", subject_path(subject), :class => 'action edit') %>
        <%= link_to("Delete", subject_path(subject), :class => 'action delete') %>
      </td>
    </tr>
  <% end %>
</table>

