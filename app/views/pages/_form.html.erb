<%= error_messages_for(f.object) %>

<table>
  <tr>
    <th>Name</th>
    <th><%= f.text_field(:name) %></th>
  </tr>
  <tr>
    <th>Position</th>
    <th><%= f.text_field(:position) %></th>
  </tr>
  <tr>
    <th>Permalink</th>
    <th><%= f.text_field(:permalink) %></th>
  </tr>
  <tr>
    <th>Visible</th>
    <th><%= f.text_field(:visible) %></th>
  </tr>
  <tr>
    <th>Content</th>
    <th><%= f.text_field(:content) %></th>
  </tr>
  <tr>
    <th>Subject</th>
    <th>
      <%= f.collection_select(:subject_id, Subject.order(:name),:id,:name, include_blank: true) %>
    </th>
  </tr>
</table>
